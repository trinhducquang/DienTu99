<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      stylesheets="@CustomerDialog.css"
      spacing="15"
      prefWidth="500"
      prefHeight="500">

    <VBox styleClass="dialog-header">
        <Label text="Thêm Khách Hàng" styleClass="dialog-title"/>
    </VBox>

    <VBox spacing="10" styleClass="form-container">
        <VBox spacing="5">
            <Label text="Mã Khách Hàng" styleClass="form-label"/>
            <TextField promptText="Nhập mã khách hàng" styleClass="form-input"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Tên Khách Hàng" styleClass="form-label"/>
            <TextField promptText="Nhập tên khách hàng" styleClass="form-input"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Số Điện Thoại" styleClass="form-label"/>
            <TextField promptText="Nhập số điện thoại" styleClass="form-input"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Email" styleClass="form-label"/>
            <TextField promptText="Nhập email" styleClass="form-input"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Địa Chỉ" styleClass="form-label"/>
            <TextField promptText="Nhập địa chỉ" styleClass="form-input"/>
        </VBox>
    </VBox>

    <HBox spacing="10" alignment="CENTER" styleClass="button-container">
        <Button text="Hủy" styleClass="cancel-button"/>
        <Button text="Lưu" styleClass="save-button"/>
    </HBox>
</VBox>