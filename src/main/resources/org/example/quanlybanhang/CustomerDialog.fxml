<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500" prefWidth="500" spacing="15" stylesheets="@CustomerDialog.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.quanlybanhang.controller.CustomerDialogController">

    <VBox styleClass="dialog-header">
        <Label styleClass="dialog-title" text="Thêm Khách Hàng" />
    </VBox>

    <VBox spacing="10" styleClass="form-container">
        <VBox spacing="5" />

        <VBox spacing="5">
            <Label styleClass="form-label" text="Tên Khách Hàng" />
            <TextField fx:id="nameField" promptText="Nhập tên khách hàng" styleClass="form-input" />
        </VBox>

        <VBox spacing="5">
            <Label styleClass="form-label" text="Số Điện Thoại" />
            <TextField fx:id="phoneField" promptText="Nhập số điện thoại" styleClass="form-input" />
        </VBox>

        <VBox spacing="5">
            <Label styleClass="form-label" text="Email" />
            <TextField fx:id="emailField" promptText="Nhập email" styleClass="form-input" />
        </VBox>

        <VBox spacing="5">
            <Label styleClass="form-label" text="Địa Chỉ" />
            <TextField fx:id="addressField" promptText="Nhập địa chỉ" styleClass="form-input" />
        </VBox>
    </VBox>

    <HBox alignment="CENTER" spacing="10" styleClass="button-container">
        <Button fx:id="cancelButton" styleClass="cancel-button" text="Hủy" />
        <Button fx:id="saveButton" styleClass="save-button" text="Lưu" />
    </HBox>
</VBox>
