<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import java.lang.*?>
<StackPane prefHeight="800.0" prefWidth="1090.0" xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.quanlybanhang.controller.sale.SaleController">

    <BorderPane>
        <top>
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #3498db;">
                <padding>
                    <Insets bottom="10" left="15" right="15" top="10"/>
                </padding>
                <Label text="Điện Tử 99" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="cartButton" onAction="#toggleCart" style="-fx-background-color: white;"
                        text="Giỏ hàng (0)"/>
                <Button style="-fx-background-color: white;" text="Đăng Xuất"/>
            </HBox>
        </top>

        <center>
            <VBox spacing="10">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15"/>
                </padding>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Danh Sách Sản Phẩm"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <ComboBox promptText="Danh mục">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Tất cả"/>
                                <String fx:value="Điện thoại"/>
                                <String fx:value="Laptop"/>
                                <String fx:value="Đồng hồ thông minh"/>
                                <String fx:value="TV"/>
                                <String fx:value="Máy tính bảng"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <ComboBox promptText="Sắp xếp theo giá">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Giá tăng dần"/>
                                <String fx:value="Giá giảm dần"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                    <TextField prefWidth="200" promptText="Tìm kiếm sản phẩm"/>
                    <Button style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Tìm kiếm"/>
                </HBox>

                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                    <GridPane fx:id="gridPane" hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                    </GridPane>
                </ScrollPane>

            </VBox>
        </center>
    </BorderPane>

    <!-- Panel giỏ hàng sẽ trượt ra từ bên phải -->
    <StackPane fx:id="cartPane" alignment="TOP_RIGHT" maxWidth="2000" prefHeight="800.0" prefWidth="2000"
               visible="false" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
        <Rectangle fill="#80000000" onMouseClicked="#closeCart">
            <StackPane.margin>
                <Insets bottom="-50" left="-50" right="-50" top="-50"/>
            </StackPane.margin>
        </Rectangle>

        <VBox fx:id="cartBox" maxWidth="500" prefWidth="500"
              style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);"
              StackPane.alignment="TOP_RIGHT">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Giỏ hàng"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button onAction="#closeCart" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="X"/>
            </HBox>

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <VBox spacing="10">
                    <!-- Sản phẩm trong giỏ 1 -->
                    <VBox spacing="5"
                          style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-color: white;">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10"/>
                        </padding>
                        <HBox spacing="10">
                            <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                                <!--                                <Image url=""/>-->
                            </ImageView>
                            <VBox HBox.hgrow="ALWAYS">
                                <Label style="-fx-font-weight: bold;" text="iPhone 16 Pro 1TB"/>
                                <Label style="-fx-text-fill: #e74c3c;" text="38.790.000₫"/>
                            </VBox>
                            <Button style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-min-width: 30;"
                                    text="X"/>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <Button style="-fx-min-width: 30;" text="-"/>
                            <TextField alignment="CENTER" prefWidth="40" text="1"/>
                            <Button style="-fx-min-width: 30;" text="+"/>
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>

            <Separator/>

            <VBox style="-fx-border-color: #e0e0e0; -fx-border-radius: 5; -fx-background-color: white;">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10"/>
                </padding>
                <HBox>
                    <Label style="-fx-font-weight: bold;" text="Tổng tiền:"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;" text="38.790.000₫"/>
                </HBox>
            </VBox>

            <HBox spacing="10">
                <Button maxWidth="Infinity" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"
                        text="Làm mới giỏ hàng" HBox.hgrow="ALWAYS"/>
                <Button maxWidth="Infinity" style="-fx-background-color: #27ae60; -fx-text-fill: white;"
                        text="Tạo đơn hàng" HBox.hgrow="ALWAYS"/>
            </HBox>

            <Separator/>

            <Label text="Thông tin khách hàng"/>


            <Button maxWidth="Infinity" style="-fx-background-color: #3498db; -fx-text-fill: white;"
                    text="Tạo khách hàng mới"/>
        </VBox>
    </StackPane>

    <!--    <stylesheets>-->
    <!--        <URL value="@/styles/style.css"/>-->
    <!--    </stylesheets>-->
</StackPane>
