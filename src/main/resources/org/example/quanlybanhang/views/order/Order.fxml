<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="747.0" prefWidth="1300.0" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.quanlybanhang.controller.order.OrderController">
    <HBox fx:id="headerBox" alignment="CENTER_LEFT" spacing="20">
        <padding>
            <Insets bottom="10" left="15" right="15" top="10" />
        </padding>
        <children>
            <Label text="Điện Tử 99" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" onAction="#handleLogout" text="Đăng Xuất" />
        </children>
    </HBox>

    <HBox prefHeight="645.0" prefWidth="1300.0" spacing="20" HBox.hgrow="ALWAYS">
        <VBox spacing="20" HBox.hgrow="ALWAYS">
            <Label alignment="CENTER" text="Quản Lý Đơn Hàng" styleClass="dashboard-title">
                <VBox.margin>
                    <Insets left="3.0" top="10.0" />
                </VBox.margin>
            </Label>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="searchField" promptText="Tìm kiếm đơn hàng" HBox.hgrow="ALWAYS" />
                <DatePicker fx:id="fromDatePicker" promptText="Từ ngày" />
                <DatePicker fx:id="toDatePicker" promptText="Đến ngày" />
                <ComboBox fx:id="statusFilterComboBox" promptText="Trạng Thái" />
                <Button fx:id="addOrderButton" text="Thêm Đơn Hàng" />
            </HBox>

            <TableView fx:id="ordersTable" prefHeight="558.0" prefWidth="1300.0">
                <columns>
                    <TableColumn fx:id="orderIdColumn" prefWidth="112.0" text="Mã Đơn Hàng" />
                    <TableColumn fx:id="customerIdColumn" prefWidth="121.0" text="Id Khách Hàng" />
                    <TableColumn fx:id="customerNameColumn" prefWidth="102.0" text="Khách Hàng" />
                    <TableColumn fx:id="orderNameColumn" prefWidth="177.0" text="Tên Đơn Hàng" />
                    <TableColumn fx:id="shippingFeeColumn" prefWidth="119.0" text="Phí Vận Chuyển" />
                    <TableColumn fx:id="orderDateColumn" prefWidth="123.0" text="Ngày Đặt" />
                    <TableColumn fx:id="totalPriceColumn" prefWidth="136.0" text="Tổng Tiền" />
                    <TableColumn fx:id="statusColumn" prefWidth="146.0" text="Trạng Thái" />
                    <TableColumn fx:id="noteColumn" prefWidth="108.0" text="Ghi chú" />
                    <TableColumn fx:id="actionsColumn" prefWidth="157.0" text="Thao Tác" />
                </columns>
            </TableView>
        </VBox>
    </HBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Pagination fx:id="pagination" />
    </HBox>
</VBox>
