<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="10" stylesheets="@product.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.quanlybanhang.controller.employee.EmployeeManagementController">

    <!-- Main Content Area -->
    <HBox spacing="20" HBox.hgrow="ALWAYS">

        <!-- Main Content -->
        <VBox prefHeight="516.0" prefWidth="1004.0" spacing="20" HBox.hgrow="ALWAYS">
            <!-- Page Title -->
            <Label fx:id="titleLabel" prefHeight="35.0" prefWidth="249.0" styleClass="dashboard-title" text=" Quản Lý Nhân Viên" />

            <!-- Search and Action Area -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <TextField fx:id="searchField" promptText="Tìm kiếm nhân viên" styleClass="search-field" HBox.hgrow="ALWAYS" />
                <Button fx:id="addEmployeeButton" styleClass="add-button" text="Thêm Nhân Viên" />
            </HBox>

            <!-- Employee Table -->
            <TableView fx:id="employeeTable" styleClass="products-table">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="91.0" text="ID" />
                    <TableColumn fx:id="colFullName" prefWidth="189.0" text="Tên Nhân Viên" />
                    <TableColumn fx:id="colUsername" prefWidth="149.0" text="Tên Tài Khoản" />
                    <TableColumn fx:id="colPassword" prefWidth="201.0" text="Mật Khẩu" />
                    <TableColumn fx:id="colEmail" prefWidth="161.0" text="Email" />
                    <TableColumn fx:id="colPhone" prefWidth="212.0" text="Phone" />
                </columns>
            </TableView>
        </VBox>
    </HBox>
</VBox>
