<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.quanlybanhang.controller.category.CategoryController">
    <center>
        <AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: white;">
            <children>
                <Label layoutX="32" layoutY="32" style="-fx-font-size: 24px; -fx-text-fill: #459CD3;" text="Quản Lý Danh Mục">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <HBox layoutX="32" layoutY="80" prefHeight="35.0" prefWidth="718.0" spacing="10">
                    <children>
                        <TextField fx:id="searchField" prefHeight="35" promptText="Tìm kiếm danh mục" HBox.hgrow="ALWAYS" />
                        <Button fx:id="addCategoryButton" prefHeight="35" style="-fx-background-color: #459CD3; -fx-text-fill: white;" text="Thêm Danh Mục" />
                    </children>
                </HBox>

                <TableView fx:id="categoryTable" layoutX="32.0" layoutY="130.0" prefHeight="330.0" prefWidth="736.0" AnchorPane.leftAnchor="32.0" AnchorPane.rightAnchor="32.0">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
                        <TableColumn fx:id="categoryColum" maxWidth="179.0" prefWidth="115.0" text="Kiểu Danh Mục" />
                        <TableColumn fx:id="nameColumn" prefWidth="133.0" text="Nhóm Sản Phẩm" />
                        <TableColumn fx:id="descriptionColumn" prefWidth="319.0" text="Mô tả" />
                        <TableColumn fx:id="actionsColumn" prefWidth="128.0" text="Thao tác" />
                    </columns>
                    <placeholder>
                        <Label text="No content in table" />
                    </placeholder>
                </TableView>
            </children>
        </AnchorPane>
    </center>
    <right>
        <AnchorPane prefWidth="320" style="-fx-background-color: white; -fx-border-color: #EEEEEE; -fx-border-width: 0 0 0 1;">
            <children>
                <Label layoutX="20" layoutY="32" style="-fx-font-size: 18px;" text="Chi Tiết Danh Mục">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <Label layoutX="20.0" layoutY="82.0" text="Nhóm Sản Phẩm" />
                <TextField fx:id="nameField" layoutX="20.0" layoutY="128.0" prefHeight="35.0" prefWidth="280" />

                <Label layoutX="20.0" layoutY="183.0" text="Mô tả:" />
                <TextArea fx:id="descriptionArea" layoutX="20.0" layoutY="215.0" prefHeight="100.0" prefWidth="280" wrapText="true" />

                <Label layoutX="23.0" layoutY="327.0" text="Dòng sản phẩm" />
                <ComboBox fx:id="childCategoryCombo" layoutX="20.0" layoutY="361.0" prefHeight="35.0" prefWidth="280" />
                <RadioButton fx:id="radioParent" layoutX="21.0" layoutY="401.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="135.0" text="Danh mục cha" />
                <RadioButton fx:id="radioChild" layoutX="174.0" layoutY="401.0" mnemonicParsing="false" prefHeight="29.0" prefWidth="126.0" text="Danh mục con" />
                <HBox layoutX="20.0" layoutY="430.0" prefHeight="40.0" prefWidth="279.0" spacing="10">
                    <children>
                        <Button fx:id="saveButton" prefHeight="40.0" prefWidth="281.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Lưu" />
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </right>
</BorderPane>
